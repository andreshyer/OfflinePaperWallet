                            rgba: 0, 0, 0, .8
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: ''
                        id: Mnemonic_Seed
                        color: 1, 1, 1, 1
                        text_size: self.width, None
                        height: self.texture_size[1]
                Button:
                    text: "Copy"
                    size_hint: .2, 1
                    color: 0, 0, 0, 1
                    background_color: 1, 1, 1, .35
                    on_release:
                        root.copy_private_key()

                Label:
                    text: 'Public Address:'
                    size_hint: 0.3, 1
                    color: 0, 0, 0, 1
                GridLayout:
                    rows: 1
                    canvas.before:
                        Color:
                            rgba: .1, .9, .1, .7
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: ''
                        id: Public_Address
                        color: 0, 0, 0, 1
                        text_size: self.width, None
                        height: self.texture_size[1]
                Button:
                    text: "Copy"
                    size_hint: .2, 1
                    color: 0, 0, 0, 1
                    background_color: 1, 1, 1, .35
                    on_release:
                        root.copy_public_key()

                Label:
                    text: 'Private Key:'
                    size_hint: 0.3, 1
                    color: 0, 0, 0, 1
                GridLayout:
                    rows: 1
                    canvas.before:
                        Color:
                            rgba: .9, .1, .1, .67
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    Label:
                        text: ''
                        id: Private_Key
                        color: 0, 0, 0, 1
                        text_size: self.width, None
                        height: self.texture_size[1]
                Button:
                    text: "Copy"
                    size_hint: .2, 1
                    color: 0, 0, 0, 1
                    background_color: 1, 1, 1, .35
                    on_release:
                        root.copy_private_key()

            GridLayout:
			    size_hint: 1, 0.2
			    rows: 1
			    padding: 10, 10, 10, 10
			    canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
