<Help_Screen>:
    id: Help_Screen
    on_enter: root.set_text()
    BoxLayout:
		padding: 10, 10, 10, 10
		orientation: 'vertical'
		GridLayout:
            size_hint: 1, 0.3
            rows: 2
            padding: 10, 10, 10, 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                Label:
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.texture_size[1]
                    text_width: self.width
                    id: Help_box
                    text: ''
                    font_name: 'Arial'
                    color: 0, 0, 0, 1
                    canvas.before:
            Button:
                text: "Return to Menu"
                size_hint: 1, .1
                background_color: 0, 0, .8, .7
                on_release:
                    root.manager.transition.direction = 'down'
                    root.manager.current = 'Menu_Screen'

