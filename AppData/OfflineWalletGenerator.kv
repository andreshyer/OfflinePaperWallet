			Image:
                source: 'AppData/ETH_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
            Image:
                source: 'AppData/MTX_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
            Button:
				text: 'Monero'
