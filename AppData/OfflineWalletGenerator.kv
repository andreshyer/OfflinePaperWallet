<Menu_Screen>:
	BoxLayout:
		padding: 10, 10, 10, 10
		orientation: 'vertical'
		GridLayout:
			size_hint: 1, 0.3
			rows: 3
            Label:
                size: self.texture_size
                size_hint: 1, 0.10
                text: "Welcome to Offline Paper Wallet Generator!"
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                size: self.texture_size
                text: 'Please select which type of wallet you would like to generate'
                size_hint: 1, 0.10
                color: 1, .2, .5, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
		GridLayout:
			size_hint: 1, 0.75
			rows: 3
			padding: 10, 10, 10, 0
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size
			Image:
                source: 'AppData/BTC_logo.png'
                size_hint_x: .4
                allow_stretch: True
			Button:
				text: 'Bitcoin'
				background_color: 0, 0, .8, .7
				on_release:
				    root.manager.transition.direction = 'left'
				    root.manager.current = 'BTC_Screen'
			Image:
                source: 'AppData/BTC_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
            Image:
                source: 'AppData/LTC_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
			Button:
				text: 'Litecoin'
				background_color: 0, 0, 0.8, .7
				on_release:
				    root.manager.transition.direction = 'left'
				    root.manager.current = 'LTC_Screen'
			Image:
                source: 'AppData/LTC_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
            Image:
                source: 'AppData/ETH_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
			Button:
				text: 'Ethereum'
				background_color: 0, 0, 0.8, .7
				on_release:
				    root.manager.transition.direction = 'left'
				    root.manager.current = 'ETH_Screen'
			Image:
                source: 'AppData/ETH_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
        GridLayout:
            size_hint: 1, 0.4
            rows: 1
            padding: 10, 10, 10, 10
            canvas.before:
				Color:
					#rgba: 1,.81,0,1
					rgba: 1, 1, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size
            Button:
                text: 'Help and About'
                background_color: .4, .4, .4, 1
                on_release:
                    root.manager.transition.direction = 'up'
                    root.manager.current = 'Help_Screen'
            Button:
                text: 'Developer Information'
                background_color: .4, .4, .4, 1
                on_release:
                    root.manager.transition.direction = 'up'
                    root.manager.current = 'Dev_Screen'

