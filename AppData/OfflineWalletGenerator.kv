################################## Dev Screen #################################################
<Dev_Screen>:
    id: Dev_Screen
    on_enter: root.set_text()
    BoxLayout:
		padding: 10, 10, 10, 10
		orientation: 'vertical'
		GridLayout:
            size_hint: 1, 0.3
            rows: 2
            padding: 10, 10, 10, 10
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    pos: self.pos
                    size: self.size
            ScrollView:
                do_scroll_x: False
                do_scroll_y: True
                Label:
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.texture_size[1]
                    text_width: self.width
                    id: Help_box
                    text: ''
                    font_name: 'Arial'
                    color: 0, 0, 0, 1
                    canvas.before:
            Button:
                text: "Return to Menu"
                size_hint: 1, .1
                background_color: 0, 0, .8, .7
                on_release:
                    root.manager.transition.direction = 'down'
                    root.manager.current = 'Menu_Screen'


################################## Menu Screen #################################################
<Menu_Screen>:
	BoxLayout:
		padding: 10, 10, 10, 10
		orientation: 'vertical'
		GridLayout:
			size_hint: 1, 0.3
			rows: 3
            Label:
                size: self.texture_size
                size_hint: 1, 0.10
                text: "Welcome to Offline Wallet Generator!"
                color: 0, 0, 0, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                size: self.texture_size
                text: 'Please select wallet type'
                size_hint: 1, 0.10
                color: 1, .2, .5, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
		GridLayout:
			size_hint: 1, 0.75
			rows: 4
			padding: 10, 10, 10, 0
			canvas.before:
				Color:
					rgba: 1, 1, 1, 1
				Rectangle:
					pos: self.pos
					size: self.size
			Image:
                source: 'AppData/BTC_logo.png'
                size_hint_x: .4
                allow_stretch: True
			Button:
				text: 'Bitcoin'
				background_color: 0, 0, .8, .7
				on_release:
				    root.manager.transition.direction = 'left'
				    root.manager.current = 'BTC_Screen'
			Image:
                source: 'AppData/BTC_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
            Image:
                source: 'AppData/LTC_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
			Button:
				text: 'Litecoin'
				background_color: 0, 0, 0.8, .7
				on_release:
				    root.manager.transition.direction = 'left'
				    root.manager.current = 'LTC_Screen'
			Image:
                source: 'AppData/LTC_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
            Image:
                source: 'AppData/ETH_logo.png'
                size_hint_x: 0.4
                allow_stretch: True
			Button:
				text: 'Ethereum'
				background_color: 0, 0, 0.8, .7
				on_release:
				    root.manager.transition.direction = 'left'
