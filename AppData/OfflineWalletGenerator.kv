                        pos: self.pos
                        size: self.size
			    Button:
                    text: 'Back To Menu'
                    background_color: 0, 0, .8, .7
                    on_release:
                        root.manager.transition.direction = 'right'
                        root.manager.current = 'Menu_Screen'
                Button:
                    text: "Help"
                    background_color: .4, .4, .4, 1
                    on_release:
                        root.manager.transition.direction = 'up'
                        root.manager.current = 'BTC_Help_Screen'

